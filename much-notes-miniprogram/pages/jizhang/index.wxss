.list-wrap {
  height: 75vh;
  overflow: auto;
  box-sizing: border-box;
  padding-bottom: 45px;
}

#container {
  /* padding: 40px 0; */
  background-color: #ccc;
}

.group {
  /* padding-top:40px; */
  text-align: justify;
  position: relative;
  background-color: #fff;
}

.sticky {
  z-index: 999;
  width: 100%;
  height: 4vh;
  font-size: 4vw;
  background: rgb(234, 247, 247);
  padding: 0 8px;
  display: flex;
  align-items: center;
  color: #f9ffff;
  box-sizing: border-box;
}

.sticky.fixed {
  position: fixed;
  top: 25vh;
}

.sticky.absolute {
  position: absolute;
}

.sticky.absolute.top {
  position: absolute;
  top: 0;
}

.sticky.absolute.bottom {
  position: absolute;
  bottom: 0;
}

.sticky_sentinel {
  position: absolute;
  left: 0;
  visibility: visible;
  opacity: 0;
  color: initial;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 5;
  width: 1rpx;
}

.sticky_sentinel--top {
  background-color: #ccc;
  /* Adjust the height and top values based on your on your sticky top position.
  e.g. make the height bigger and adjust the top so observeHeaders()'s
  IntersectionObserver fires as soon as the bottom of the sentinel crosses the
  top of the intersection container. */
  height: 4vh;
  top: -4vh;
}

.sticky_sentinel--bottom {
  background: yellow;
  bottom: 0;
  /* Height should match the top of the header when it's at the bottom of the
  intersection container. */
  height: 4vh;
}

